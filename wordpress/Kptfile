apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: wordpress
  labels:
    app: wordpress
upstream:
  type: git
  git:
    repo: https://github.com/rajasahil/kpt-pkg-example
    directory: /wordpress
    ref: main
  updateStrategy: resource-merge
upstreamLock:
  type: git
  git:
    repo: https://github.com/rajasahil/kpt-pkg-example
    directory: /wordpress
    ref: main
    commit: ed9dcb8ba197712d404ee1355de303b255e9814e
info:
  description: This is an example wordpress package with mysql subpackage.
pipeline:
  mutators:
    - image: gcr.io/kpt-fn/set-labels:v0.1
      configMap:
        app: wordpress
  validators:
    - image: gcr.io/kpt-fn/kubeval:v0.3
